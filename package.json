  "dependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.8",
    "@types/express-session": "^1.17.0",
    "@types/mongodb": "^3.5.27",
    "@types/mongoose": "^5.7.36",
    "@types/morgan": "^1.9.1",
    "@types/node": "^14.6.3",
    "@types/passport": "^1.0.4",
    "@types/passport-google-oauth20": "^2.0.3",
    "@types/validator": "^13.1.0",
    "bson-ext": "^2.0.5",
    "concurrently": "^5.3.0",
    "connect-mongo": "^3.2.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "logform": "^2.2.0",
    "mongodb": "^3.6.1",
    "mongoose": "^5.10.2",
    "morgan": "^1.10.0",
    "passport": "^0.4.1",
    "passport-google-oauth20": "^2.0.0",
    "typescript": "^4.0.2",
    "validator": "^13.1.1",
    "winston": "^3.3.3"
  },
  "scripts": {
    "build": "concurrently \"yarn run build-server\" \"yarn run build-client\"",
    "build-client": "cd client && yarn run build",
    "build-server": "cd server && tsc",
    "clean": "concurrently \"yarn run clean-build\" \"yarn run clean-deps\" \"yarn run clean-logs\"",
    "clean-build": "rm -rf server/dist && rm -rf client/build",
    "clean-deps": "rm -rf node_modules && rm -rf yarn.lock && rm -rf client/node_modules && rm -rf client/yarn.lock",
    "clean-logs": "find . -name \"*.log\" -type f -delete",
    "client": "cd client && yarn start",
    "lint": "concurrently \"yarn run lint-server\" \"yarn run lint-client\"",
    "lint-client": "cd client && eslint . --fix --ext .ts,.tsx",
    "lint-server": "cd server && eslint . --fix --ext .ts",
    "preinstall": "cd client && yarn install",
    "server": "node server/dist/index.js",
    "start": "yarn run build && yarn run server"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "eslint": "6.8.0",
    "eslint-config-airbnb-typescript": "^9.0.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.0.8"
  }
}
