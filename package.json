{
  "name": "tetribass",
  "version": "1.0.0",
  "private": true,
  "repository": "https://github.com/NunkuGemu/TetriBASS.git",
  "author": "Junwei Chen <jwchen1259@gmail.com>",
  "license": "MIT",
  "homepage": "https://nunkugemu.github.io/TetriBASS",
  "dependencies": {
    "axios": "^0.21.1",
    "bson-ext": "^2.0.5",
    "connect-mongo": "^4.4.1",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "logform": "^2.2.0",
    "luxon": "^1.27.0",
    "mongodb": "^3.6.9",
    "mongoose": "^5.12.14",
    "morgan": "^1.10.0",
    "passport": "^0.4.1",
    "passport-google-oauth20": "^2.0.0",
    "validator": "^13.5.2",
    "winston": "^3.3.3"
  },
  "scripts": {
    "build": "concurrently \"yarn run build:server\" \"yarn run build:client\"",
    "build:client": "cd client && yarn run build",
    "build:server": "cd server && tsc",
    "clean": "concurrently \"yarn run clean:build\" \"yarn run clean:deps\" \"yarn run clean:logs\"",
    "clean:build": "rm -rf server/build && rm -rf client/build",
    "clean:deps": "rm -rf node_modules && rm -rf client/node_modules",
    "clean:logs": "find . -name \"*.log\" -type f -delete",
    "dev:client": "cd client && yarn start",
    "dev:server": "yarn run build:client && cd server && concurrently --kill-others \"tsc -w\" \"nodemon build/index.js\"",
    "lint": "concurrently \"yarn run lint:server\" \"yarn run lint:client\"",
    "lint:client": "cd client && eslint . --fix --ext .ts,.tsx",
    "lint:server": "cd server && eslint . --fix --ext .ts",
    "preinstall": "cd client && yarn install --frozen-lockfile",
    "server": "node server/build/index.js",
    "start": "yarn run build && yarn run server"
  },
  "devDependencies": {
    "@types/express": "^4.17.12",
    "@types/express-session": "^1.17.3",
    "@types/luxon": "^1.27.0",
    "@types/mongodb": "^3.6.18",
    "@types/mongoose": "^5.11.97",
    "@types/morgan": "^1.9.2",
    "@types/node": "^16.4.12",
    "@types/passport": "^1.0.5",
    "@types/passport-google-oauth20": "^2.0.8",
    "@types/validator": "^13.1.4",
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "@typescript-eslint/parser": "^4.28.0",
    "concurrently": "^6.2.0",
    "eslint": "7.29.0",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "nodemon": "^2.0.7",
    "typescript": "^4.3.4"
  }
}
