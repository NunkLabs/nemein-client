{
  "name": "TetriBASS",
  "version": "1.0.0",
  "private": true,
  "repository": "https://github.com/NunkuGemu/TetriBASS.git",
  "author": "Junwei Chen <jwchen1259@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@types/express": "^4.17.7",
    "@types/mongodb": "^3.5.25",
    "@types/mongoose": "^5.7.36",
    "@types/node": "^14.0.27",
    "bson-ext": "^2.0.5",
    "concurrently": "^5.3.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "mongodb": "^3.6.0",
    "mongoose": "^5.9.28",
    "typescript": "^4.0.2"
  },
  "scripts": {
    "build": "node scripts/build.js",
    "clean": "concurrently \"yarn run clean-build\" \"yarn run clean-deps\" \"yarn run clean-logs\"",
    "clean-build": "rm -rf src/client/build",
    "clean-deps": "rm -rf node_modules && rm -rf yarn.lock && rm -rf src/client/node_modules && rm -rf src/client/yarn.lock",
    "clean-logs": "find . -name \"*.log\" -type f -delete",
    "client": "node scripts/client.js",
    "lint": "concurrently \"yarn run lint-server\" \"yarn run lint-client\"",
    "lint-client": "cd src/client && eslint . --fix --ext .ts,.tsx",
    "lint-server": "cd src/server && eslint . --fix --ext .js",
    "preinstall": "cd src/client && yarn install && yarn run build",
    "server": "node src/server/index.js",
    "start": "concurrently \"yarn run server\" \"yarn run client\""
  },
  "devDependencies": {
    "eslint": "6.8.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-airbnb-typescript": "^9.0.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.0.8"
  }
}
