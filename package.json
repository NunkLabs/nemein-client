{
  "name": "TetriBASS",
  "version": "1.0.0",
  "private": true,
  "repository": "https://github.com/NunkuGemu/TetriBASS.git",
  "author": "Junwei Chen <jwchen1259@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@types/express": "^4.17.8",
    "@types/mongodb": "^3.5.27",
    "@types/mongoose": "^5.7.36",
    "@types/node": "^14.6.3",
    "bson-ext": "^2.0.5",
    "concurrently": "^5.3.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "mongodb": "^3.6.1",
    "mongoose": "^5.10.2",
    "serve": "^11.3.2",
    "typescript": "^4.0.2"
  },
  "scripts": {
    "build": "concurrently \"yarn run build-client\" \"yarn run build-server\"",
    "build-client": "cd client && yarn run build",
    "build-server": "cd server && tsc",
    "clean": "concurrently \"yarn run clean-build\" \"yarn run clean-deps\" \"yarn run clean-logs\"",
    "clean-build": "rm -rf client/build",
    "clean-deps": "rm -rf node_modules && rm -rf yarn.lock && rm -rf client/node_modules && rm -rf client/yarn.lock",
    "clean-logs": "find . -name \"*.log\" -type f -delete",
    "client": "cd client && yarn start",
    "lint": "concurrently \"yarn run lint-server\" \"yarn run lint-client\"",
    "lint-client": "cd client && eslint . --fix --ext .ts,.tsx",
    "lint-server": "cd server && eslint . --fix --ext .js",
    "preinstall": "cd client && yarn install",
    "server": "node server/dist/index.js",
    "start": "yarn run build && concurrently \"yarn run server\" \"serve -s client/build\""
  },
  "devDependencies": {
    "eslint": "6.8.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-airbnb-typescript": "^9.0.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.0.8"
  }
}
